<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.HomeFragment">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F4F4F4"
            >

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="200dp"
                android:layout_height="200dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:lottie_rawRes="@raw/add"
                app:lottie_repeatMode="reverse"
                app:lottie_repeatCount="1000"
                app:lottie_autoPlay="true"
                android:id="@+id/nocontent"
                />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_baseline_menu_24"
                android:scaleType="centerCrop"
                android:backgroundTint="#F4F4F4"
                android:background="@color/white"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:id="@+id/home_menu_btn"
                />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Overall Attendance : "
                        app:layout_constraintTop_toTopOf="@+id/home_menu_btn"
                        app:layout_constraintBottom_toBottomOf="@+id/home_menu_btn"
                        app:layout_constraintRight_toLeftOf="@+id/overall_ratio"
                        android:layout_marginRight="10dp"
                        android:id="@+id/overallatt_text"
                        android:textColor="#616161"
                        />
                    <TextView
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12/34"
                        android:textColor="@color/black"
                        app:layout_constraintTop_toTopOf="@+id/overallatt_text"
                        app:layout_constraintBottom_toBottomOf="@+id/overallatt_text"
                        app:layout_constraintRight_toLeftOf="@+id/overall_ProgressBar_green"
                        android:textSize="14dp"
                        android:layout_marginRight="10dp"
                        android:id="@+id/overall_ratio"
                        android:maxLines="1"
                        android:autoSizeTextType="uniform"
                        />
                    <TextView
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="70%"
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        android:maxLines="1"
                        app:layout_constraintTop_toTopOf="@+id/overall_ProgressBar_green"
                        app:layout_constraintBottom_toBottomOf="@+id/overall_ProgressBar_green"
                        app:layout_constraintLeft_toLeftOf="@+id/overall_ProgressBar_green"
                        app:layout_constraintRight_toRightOf="@+id/overall_ProgressBar_green"
                        android:id="@+id/overall_percent"
                        android:autoSizeTextType="uniform"
                        />
            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:id="@+id/overall_ProgressBar_green"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:progress="10"
                android:max="100"
                app:indicatorColor="#28A849"
                app:indicatorSize="55dp"
                app:trackThickness="8dp"
                app:trackColor="#CDDDD0"
                app:indicatorDirectionCircular="clockwise"
                app:layout_constraintTop_toTopOf="@+id/home_menu_btn"
                app:layout_constraintBottom_toBottomOf="@+id/home_menu_btn"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="10dp"

                />
            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:id="@+id/overall_ProgressBar_yellow"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:progress="10"
                android:max="100"
                app:indicatorColor="#F3DA00"
                app:indicatorSize="55dp"
                app:trackThickness="8dp"
                app:trackColor="#FBF5D7"
                app:indicatorDirectionCircular="clockwise"
                app:layout_constraintTop_toTopOf="@+id/home_menu_btn"
                app:layout_constraintBottom_toBottomOf="@+id/home_menu_btn"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="10dp"

                />
            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:id="@+id/overall_ProgressBar_red"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:progress="10"
                android:max="100"
                app:indicatorColor="#EF0031"
                app:indicatorSize="55dp"
                app:trackThickness="8dp"
                app:trackColor="#EDDDDE"
                app:indicatorDirectionCircular="clockwise"
                app:layout_constraintTop_toTopOf="@+id/home_menu_btn"
                app:layout_constraintBottom_toBottomOf="@+id/home_menu_btn"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="10dp"

                />
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@+id/home_menu_btn"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/home_menu_add_btn"
                android:layout_marginLeft="20dp"
                tools:listitem="@layout/item"
                android:layout_marginRight="20dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/home_recview"
                />
            <com.google.android.material.card.MaterialCardView
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cardCornerRadius="30dp"
                app:rippleColor="@color/white"
                app:cardBackgroundColor="#605F5F"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="30dp"
               android:id="@+id/home_menu_add_btn"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_baseline_add_24"
                        android:layout_centerInParent="true"
                        />

                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>
            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="200dp"
                android:layout_height="200dp"
                app:lottie_repeatCount="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:lottie_rawRes="@raw/thumbsup"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/lottie1"
                android:layout_margin="25dp"
                />
            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="200dp"
                android:layout_height="200dp"
                app:lottie_repeatCount="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:lottie_rawRes="@raw/failemoji2"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/lottie2"
                android:layout_margin="25dp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>
</layout>